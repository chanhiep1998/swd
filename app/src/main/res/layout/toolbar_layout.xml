<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/Widget.Dental.Toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="0dp"
    android:background="#ffffff"
    android:elevation="6dp"
    app:collapseIcon="@drawable/ic_search_24px"
    app:layout_collapseMode="pin"
    app:popupTheme="@style/AppTheme"
    app:subtitleTextColor="#00E3B3B3"
    app:title="TOOSSHINY"
    app:titleTextAppearance="@style/TextAppearance.Dental.Toolbar"
    app:titleTextColor="@color/colorAccent">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="121dp"
            android:layout_height="60dp"
            android:src="@drawable/logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/colorAccent"
            android:foregroundTint="@color/colorAccent"
            android:src="@drawable/ic_search_24px"
            android:layout_marginTop="10dp"
            android:onClick="clickToSearch"
            app:srcCompat="@drawable/ic_search_24px" />

        <ImageView
            android:id="@+id/nearMeImageView"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/colorAccent"
            android:foregroundTint="@color/colorAccent"
            android:padding="2dp"
            android:src="@drawable/ic_my_location_24px"
            app:srcCompat="@drawable/ic_my_location_24px" />

    </LinearLayout>
</androidx.appcompat.widget.Toolbar>